#!/usr/bin/python3
if __name__ == "__main__":
    import sys
    argv = sys.argv
    if (len(argv) == 2):
        print("1 argument:")
    elif len(argv) == 1:
        print("0 arguments.")
    else:
        print("{} arguments:".format(len(argv)))

    for x in range(1, len(argv)):
        print("{}: {}".format(x, argv[x]))
